div.profile-main(flex-container="row" flex-column="12" flex-align="center center")

  div(flex-item="1")
    div.profile-img-container
      img(
        class="img-round"
        ng-src="{{ vm.currentUser.image_url || '../../images/default.jpg' }}"
        alt="{{ vm.currentUser.name }} Profile Picture"
        lx-ripple
        title="{{ vm.currentUser.name }}")

  div.profile-details(flex-item="3")
    div(class="p+")
      h1 {{ vm.currentUser.name }}

      div(class="pt")
        span Joined
          strong  {{ vm.currentUser.created | date : 'MMM d, yyyy'}}

        br

        span Last Seen
          strong(ng-if="vm.currentUser.updated")  {{ vm.currentUser.updated | date : 'MMM d, yyyy'}}
          strong(ng-if="!vm.currentUser.updated")  Today

      div(class="pt+")
        span.pr
          lx-button.br20(
            lx-color="red"
            lx-type="raised"
            ng-click="vm.Deactivate(vm.currentUser.$id)") Deactivate Account

        span.pr
          lx-button.br20(
            lx-color="black"
            lx-type="raised"
            ng-click="vm.Logout()") Sign Out