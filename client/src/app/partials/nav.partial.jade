.znote_navcontainer
  nav.bgc(ng-cloak)
    div
      img.logo(src="images/logo-black.png")

      .znote-profile-nav

        lx-dropdown(lx-position="right" lx-width="190" lx-offset="6")
          lx-dropdown-toggle
            lx-button(
              lx-type="fab"
              lx-size="m"
              lx-color="white")

              img(
                class="img-round"
                ng-src="{{ vm.currentUser.image_url || 'http://www.sessionlogs.com/media/icons/defaultIcon.png' }}"
                alt="{{ vm.currentUser.name }} Profile Picture"
                lx-ripple
                lx-tooltip="{{ vm.currentUser.name }}"
                lx-tooltip-position="bottom")

          lx-dropdown-menu
            ul
              - var classes = ['dropdown-link', 'dropdown-link--is-large']

              li.dropdown-link.dropdown-link--is-header.text-flex-center.no-pd
                span Signed in as <strong>{{ vm.currentUser.name | splitWord }}</strong>
              li.dropdown-divider
              li
                a(class=classes ui-sref="profile({ name: vm.currentUser.name, uid: vm.currentUser.$id })")
                  i.mdi.mdi-account
                  span Your Profile
              li
                a(class=classes ui-sref="notes")
                  i.mdi.mdi-note
                  span Your Notes
              li
                a(class=classes ng-click="vm.Logout()")
                  i.mdi.mdi-logout
                  span Sign out

div(ui-view="theView" class="view-connector")
